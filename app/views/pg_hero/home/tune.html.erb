<div class="content">
  <h1>Tune</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Setting</th>
        <th style="width: 20%;">Value</th>
        <th style="width: 20%;">Recommended</th>
      </tr>
    </thead>
    <tbody>
      <% @settings.each do |setting| %>
        <tr>
          <td><%= setting["name"] %></td>
          <td><%= setting["value"] %></td>
          <td><%= setting["recommended_value"] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
