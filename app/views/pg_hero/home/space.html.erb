<h1>Largest Relations</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th style="width: 20%;">Type</th>
      <th style="width: 20%;">Size</th>
    </tr>
  </thead>
  <tbody>
    <% @relation_sizes.each do |query| %>
      <tr>
        <td><%= query["name"] %></td>
        <td><%= query["type"] %></td>
        <td><%= query["size"] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
